<!doctype html>
<html lang={WP.language}>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={WP.description}>

    <title>{WP.name}</title>

    {@wphead /}
</head>

<body class="{#WP.body_class}{.}{@sep} {/sep}{/WP.body_class}">

<div class="px-4">
<div class="top-bar text-slate-700 max-w-7xl mx-auto my-8 bg-slate-200 rounded-full px-8 font-bold flex items-center justify-between">
    <div class="top-bar-left">
        <ul class="menu">
            <li class="menu-text"><a href="{WP.url}">{WP.name}</a></li>
        </ul>
    </div>
    <div class="top-bar-right">
        {@menu menu_name="primary_navigation" ul_id="primary-menu" ul_classes="menu primary-menu flex gap-4" show_submenu=false /}
    </div>
</div>
</div>

<main id="main-content" class="main-container">